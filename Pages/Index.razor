@page "/"

<AuthorizeView>
    <Authorized>
        <h1>Hello @context.User.Identity.Name!</h1>
        <h1>Hello @context.User.Identity.IsAuthenticated.ToString()</h1>
        <h1>Hello @context.User.FindFirst("Cabang").Value!</h1>
    </Authorized>
    <NotAuthorized>
        <h1>Hello Guest</h1>
    </NotAuthorized>
</AuthorizeView>

Welcome to your new app.

@code {
    [CascadingParameter]
    private Task<AuthenticationState> authenticationState { get; set; }
}